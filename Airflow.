apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: grafana-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$2
    nginx.ingress.kubernetes.io/use-regex: "true"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
        - eddv3-hbt
      secretName: tls-secret
  rules:
    - host: eddv3-hbt
      http:
      	paths:
      	- path: /grafana(/|$)(.*)
          pathType: Prefix
          backend:
          service:
            name: grafana
            port:
              number: 80








