# Set the deployment mode
deploymentMode: SingleBinary

# Single binary setup
singleBinary:
  replicas: 1
  persistence:
    enabled: true
    accessModes:
      - ReadWriteOnce
    size: 10Gi
    storageClass: standard # Change this if you're using a different storage class

  resources:
    requests:
      cpu: 100m
      memory: 256Mi
    limits:
      cpu: 500m
      memory: 512Mi

  readinessProbe:
    httpGet:
      path: /ready
      port: http
    initialDelaySeconds: 10
    periodSeconds: 10
    failureThreshold: 3

# Disable components from other deployment modes
distributor:
  replicas: 0
ingester:
  replicas: 0
querier:
  replicas: 0
queryFrontend:
  replicas: 0
gateway:
  replicas: 0

# Loki configuration
loki:
  auth_enabled: false

  commonConfig:
    replication_factor: 1

  storage:
    type: filesystem
    filesystem:
      directory: /var/loki/chunks

  schemaConfig:
    configs:
      - from: 2024-01-01
        store: boltdb-shipper
        object_store: filesystem
        schema: v11
        index:
          prefix: index_
          period: 24h

  compactor:
    working_directory: /var/loki/compactor
    shared_store: filesystem

  limits_config:
    retention_period: 7d
    max_query_length: 24h
    max_query_parallelism: 32
    reject_old_samples: true
    reject_old_samples_max_age: 168h # 7 days

# Service settings
service:
  type: ClusterIP
  port: 3100

# Enable PVC
persistence:
  enabled: true
  existingClaim: "" # Optional: reference pre-created PVC
  storageClassName: standard
  accessModes:
    - ReadWriteOnce
  size: 10Gi

# Enable Loki ingress if needed (optional)
# ingress:
#   enabled: true
#   annotations: {}
#   hosts:
#     - host: loki.yourdomain.com
#       paths:
#         - path: /
#           pathType: ImplementationSpecific
#   tls: []

# Use standard pod annotations for Azure Workload Identity or others if needed
podAnnotations: {}

# Mount path inside the pod
volumeMounts:
  - name: storage
    mountPath: /var/loki

volumes:
  - name: storage
    persistentVolumeClaim:
      claimName: loki-pvc # Match the PVC name or leave blank for dynamic provisioning
