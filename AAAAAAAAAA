# gRPC Ingress
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: otel-collector-grpc-ingress
  namespace: monitoring
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/backend-protocol: "GRPC"
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
spec:
  ingressClassName: nginx
  tls:
  - hosts:
    - dashboard  # Replace with your actual hostname
    secretName: tls-secret  # You need to create this secret with TLS certs
  rules:
  - host: dashboard  # Replace with your actual hostname
    http:
      paths:
      - path: /otel
        pathType: Prefix
        backend:
          service:
            name: otel-collector-collector
            port:
              number: 4317

---
# HTTP Ingress
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: otel-collector-http-ingress
  namespace: monitoring
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/backend-protocol: "HTTP"
spec:
  ingressClassName: nginx
  tls:
  - hosts:
    - dashboard  # Replace with your actual hostname
    secretName: tls-secret  # You need to create this secret with TLS certs
  rules:
  - host: dashboard  # Replace with your actual hostname
    http:
      paths:
      - path: /otel
        pathType: Prefix
        backend:
          service:
            name: otel-collector-collector
            port:
              number: 4318  # OTLP HTTP port
